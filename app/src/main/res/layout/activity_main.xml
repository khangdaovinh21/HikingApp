<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/khang3">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <Button
        android:id="@+id/buttonNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:text="Buget"
        android:background="@android:color/transparent"
        android:layout_marginLeft="2dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="237dp"
        android:layout_marginBottom="1dp"
        app:srcCompat="@drawable/boyt" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-10dp">

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/textViewSensor1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sensor 1 Data"
            android:textSize="18sp"
            />

      </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_weight="1"
          android:text="Floor 1 House 1"
          android:textSize="18sp"
          android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-10dp">

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/textViewSensor2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sensor 2 Data"
            android:textSize="18sp" />

      </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Floor 2 House 1"
          android:textSize="18sp"
          android:layout_marginTop="20dp"
          android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-10dp">

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/textViewSensor3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sensor 3 Data"
            android:textSize="18sp" />

      </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Floor 1 House 2"
          android:textSize="18sp"
          android:layout_marginTop="20dp"
          android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-10dp">

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/textViewSensor4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sensor 4 Data"
            android:textSize="18sp" />

      </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Floor 2 House 2"
          android:textSize="18sp"
          android:layout_marginTop="20dp"
          android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-10dp">

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/textViewSensor5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sensor 5 Data"
            android:textSize="18sp" />

      </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Floor 1 House 3"
          android:textSize="18sp"
          android:layout_marginTop="20dp"
          android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-10dp">

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/textViewSensor6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sensor 6 Data"
            android:textSize="18sp" />

      </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Floor 2 House 3"
          android:textSize="18sp"
          android:layout_marginTop="20dp"
          android:textColor="#FFFFFF"/>
    </LinearLayout>

    <Switch
        android:id="@+id/connectionSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSensor6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:minHeight="48dp"
        android:text="Connect/Disconnect"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="-20dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#252222"
        android:minHeight="48dp"
        app:icon="@android:drawable/ic_lock_power_off" />
  </LinearLayout>

</ScrollView>
